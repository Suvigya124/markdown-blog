<div class ="form-group mb-3">
    <label for="title"><h4>Title</h4></label>
    <input required value="<%= article.title %>" class="form-control" type="text" name="title" id="title">
</div>
<div class ="form-group mb-3">
    <label for="description"><h4>Description</h4></label>
    <textarea class="form-control" name="description" id="description" rows="3"><%= article.description %></textarea>
</div>
<div class ="form-group mb-3">
    <label for="markdown"><h4>Markdown</h4></label>
    <textarea required class="form-control" name="markdown" id="markdown" rows="5"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary mx-2">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>